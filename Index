<body>

  <div class="card">
    <h1>Hey Love ‚ù§Ô∏è</h1>
    <p>I've been meaning to ask you something really special...</p>
    <h2>Will you be my Valentine? üíå</h2>

    <div class="buttons">
      <button class="yes" onclick="sayYes()">Yes üíñ</button>
      <button class="no" id="noBtn">No üôà</button>
    </div>

    <div class="message" id="message"></div>

    <img src="https://media.tenor.com/kRyOPyDON_AAAAAM/she-said-yes-happily.gif" 
         alt="Celebration" class="gif" id="celebrationGif" />

    <!-- Background music -->
    <audio id="bgMusic" src="https://dojimitsuri.github.io/Valentine/Get%20you.mp3" autoplay loop></audio>
  </div>

  <script>
    const noBtn = document.getElementById('noBtn');
    const gif = document.getElementById('celebrationGif');
    const bgMusic = document.getElementById('bgMusic');

    // Move No button randomly on hover
    noBtn.addEventListener('mouseenter', () => {
      const x = Math.random() * 300 - 100;
      const y = Math.random() * 300 - 100;
      noBtn.style.transform = `translate(${x}px, ${y}px)`;
    });

    // Say Yes function
    function sayYes() {
      document.querySelector('.buttons').style.display = 'none';
      const message = document.getElementById('message');
      message.textContent = "";
      message.style.display = 'block';
      gif.style.display = 'block';
      setTimeout(() => { gif.style.opacity = '1'; }, 50);
      createHearts();
      fadeInMusic();
    }

    // Hearts animation
    function createHearts() {
      for (let i = 0; i < 25; i++) {
        const heart = document.createElement('div');
        heart.className = 'heart';
        heart.innerText = '‚ù§Ô∏è';
        heart.style.left = Math.random() * 100 + 'vw';
        heart.style.animationDuration = 3 + Math.random() * 3 + 's';
        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 6000);
      }
    }

    // Fade-in background music
    function fadeInMusic(duration = 3000) {
      bgMusic.volume = 0;
      bgMusic.play();
      let step = 0.01;
      let interval = duration / (1/step);
      let vol = 0;
      const fade = setInterval(() => {
        vol += step;
        if (vol >= 1) {
          bgMusic.volume = 1;
          clearInterval(fade);
        } else {
          bgMusic.volume = vol;
        }
      }, interval);
    }
  </script>

</body>
